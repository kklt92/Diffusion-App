<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diffusion.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.diffusion.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.diffusion.app.FreeFormBinaryDiffusion.FreeFormBinaryActivity"
            android:label="@string/title_activity_one_dimensional_diffusion"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.diffusion.app.FreeFormTernaryDiffusion.TernaryFreeFormActivity"
            android:label="@string/title_activity_ternary_free_form"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.diffusion.app.PracticeSection.PracticeGraphActivity"
            android:label="@string/title_activity_practice_graph"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
